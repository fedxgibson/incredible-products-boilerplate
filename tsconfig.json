{
    "compilerOptions": {
      "typeRoots": ["./types", "./node_modules/@types"],
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
        {
          "name": "next"
        }
      ],
      "baseUrl": ".", 
      "paths": {
        "@/*": ["./src/*"],
        "@components/*": ["./src/components/*"],
        "@lib/*": ["./src/lib/*"]
      }
    },
    "include": ["src/app/types/next-env.d.ts", "**/*.ts", "**/*.tsx", "src/apps/types/env.d.s",".next/types/**/*.ts"],
    "exclude": ["node_modules"]
  }